{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es6", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "ES2021",
    "jsx": "preserve",
    "baseUrl": "app/javascript/packs",
    // "paths": {
    //    "types_button": ["types/button"]
    // },
    "noEmit": true
  },
  "include": ["app/javascript/packs"],
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "vendor",
    "public"
  ],
  "compileOnSave": false
}
