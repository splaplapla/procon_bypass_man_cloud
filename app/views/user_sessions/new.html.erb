<h1>ログイン</h1>

<%= form_with url: login_path, method: :post do |f| %>
  <div class="form-group mb-2">
    <%= f.label :email, "メールアドレス", class: "col-form-label" %>
    <%= f.text_field :email, value: params[:email], class: "form-control", required: true %>
  </div>
  <div class="form-group mb-5">
    <%= f.label :password, "パスワード", class: "col-form-label" %>
    <%= f.password_field :password, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= f.submit "ログイン", class: "form-control btn btn-primary" %>
  </div>
<% end %>
