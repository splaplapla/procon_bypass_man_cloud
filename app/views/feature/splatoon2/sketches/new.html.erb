<%= form_with model: @sketch, url: feature_splatoon2_sketches_path, method: :post do |f| %>
  <%= render "shared/validation_errors", f: f %>

  <div class="form-group row mb-2">
    <%= f.label :name, "名前", class: "col-form-label" %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="form-group row mb-5">
    <%= f.label :image, "画像", class: "col-form-label" %>
    <%= f.file_field :image, class: "form-control", required: true %>
  </div>

  <div class="form-group row">
    <%= f.submit class: "form-control btn btn-primary" %>
  </div>
<% end %>
