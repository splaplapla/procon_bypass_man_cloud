<%= link_to "リモートマクロのグループ「#{@remote_macro_group.name}」", streaming_services_path %> -＞</span>

<h1 class="mb-5">リモートマクロの新規登録</h1>
<%= form_for(@remote_macro, url: update_trigger_words_remote_macro_path(@remote_macro)) do |f| %>
  <%= render "shared/validation_errors", f: f %>
  <div class="mb-3 row">
    <%= f.label :trigger_word_list, "トリガーワード", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :trigger_word_list, value: f.object.trigger_word_list.join(", "), class: 'form-control' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-0"></div>
    <div class="col-sm-12">
      <%= f.submit "登録する", class: "form-control btn btn-primary" %>
    </div>
  </div>
<% end %>

