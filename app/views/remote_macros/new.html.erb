<%= link_to "リモートマクロのグループ「#{@remote_macro_group.name}」", remote_macro_groups_path %> -＞</span>

<h1 class="mb-5">リモートマクロの新規登録</h1>
<%= form_for([@remote_macro_group, @remote_macro]) do |f| %>
  <%= render "shared/validation_errors", f: f %>
  <div class="mb-3 row">
    <%= f.label :name, "名前", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>
  </div>
  <div class="mb-3 row">
    <%= f.label :steps, "マクロ", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :steps, class: "form-control", required: true %>
    </div>
  </div>
  <div class="mb-3 row">
    <div class="col-sm-0"></div>
    <div class="col-sm-12">
      <%= f.submit "登録する", class: "form-control btn btn-primary" %>
    </div>
  </div>
<% end %>
