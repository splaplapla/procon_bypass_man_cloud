<h1 class="mb-5">ストリーミングサービスの登録</h1>
<%= form_for @streaming_service, remote: false do |f| %>
  <%= render "shared/validation_errors", f: f %>

  <div class="mb-3 row">
    <%= f.label :name, "名前", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>
  </div>

  <div class="mb-3 row">
    <%= f.label :service_type, "連携先", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      youtube live
      <%= f.hidden_field :service_type, value: :youtube_live, class: "form-control", required: true %>
    </div>
  </div>

  <div class="mb-3 row">
    <%= f.label :device_id, "接続するデバイス", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.select :name, current_user.devices.map { |d| [d.name, d.id] }, include_blank: true %>
    </div>
  </div>

  <div class="mb-3 row">
    <%= f.label :remote_macro_group_id, "連携するリモートマクロのグループ", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.select :name, current_user.remote_macro_groups.map { |r| [r.name, r.id] }, include_blank: true %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-0"></div>
    <div class="col-sm-12">
      <%= f.submit "登録する", class: "form-control btn btn-primary" %>
    </div>
  </div>
<% end %>
