<h1 class="mb-5">ユーザの設定変更</h1>

<%= form_with model: @user, url: user_path, method: :put do |f| %>
  <div class="mb-5 row">
    <%= f.label :email, "メールアドレス", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :email, class: "form-control", required: true %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-0"></div>
    <div class="col-sm-12">
      <%= f.submit "更新する", class: "form-control btn btn-primary" %>
    </div>
  </div>
<% end %>
